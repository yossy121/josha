<% provide(:title, @Station.company.name + ' ' + @Station.name + '駅 詳細') %>
<header>
  <h1 id="show"><%= @Station.company.name %> <%= @Station.name %>駅 詳細</h1>
</header>
<article>
<% if flash[:notice] %>
  <p id="sub"><%= flash[:notice] %>
<% end %>
  <dl>
    <dt>駅名 （ふりがな）<dt>
    <dd><%= @Station.name %> （<%= @Station.name_ruby %>）</dd>
    <dt>都道府県<dt>
    <dd><%= @Station.state.name %></dd>
    <dt>会社名<dt>
    <dd><%= @Station.company.name %></dd>
    <p class="s_title">訪問記録</p>
    <table border="1">
      <col span="2" width="75" />
      <tbody>
        <tr>
          <th>訪問日</th>
          <th>訪問チェック</th>
          <th>編集ボタン</th>
        </tr>
        <tr>
          <td class="date"><%= @Status.visit_day %></td>
          <td class="chk"><% if @Status.visit_chk? %>●<%  end %></td>
          <td><%= link_to "編集画面へ", station_edit_path(@Status) %></td>
        </tr>
      </tbody>
    </table>
  </dl>
</article>
