<% provide(:title, @Company.name + ' 駅一覧') %>
<h1><%= @Company.name %> 駅一覧</h1>
<table border="1">
  <tbody>
    <tr>
      <th>駅名</th>
      <th>ふりがな</th>
      <th>都道府県</th>
    </tr>
    <% @Stations.each do |s| %>
    <tr>
      <td><%= link_to s.name, station_detail_path(s) %></td>
      <td><%= s.name_ruby %></td>
      <td><%= s.state.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
