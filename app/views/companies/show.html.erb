<% provide(:title, '日本国内鉄道会社一覧') %>
<nav>
  <ul>
<%= render partial: 'nav' %>
  </ul>
</nav>
<header>
  <h1 id="show">日本国内鉄道会社一覧</h1>
</header>
<article>
  <div class="links">
    <p>会社種類から選択</p>
    <ul>
      <li><%= link_to "全鉄道会社", companies_path %></li>    <% @Categories.each do |c| %>
      <li><%= link_to "#{c.name}", companies_show_path(c) %></li>
    <% end %>
    </ul>
  </div>
  <table border="1">
    <col span="1" width="150" />
    <col span="2" width="200" />
    <tbody>
      <tr>
        <th>会社名</th>
        <th>路線一覧</th>
        <th>駅一覧</th>
      </tr>
    <% @companies.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= link_to "#{c.name} 路線一覧", rosen_index_company_path(c) %></td>
        <td><%= link_to "#{c.name} 駅一覧", station_index_company_path(c) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</article>
